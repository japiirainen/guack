{
   "name": "guack",
   "version": "1.0.0",
   "main": "index.js",
   "repository": "https://github.com/japiirainen/guack.git",
   "author": "Joona Piirainen <joona.piirainen@gmail.com>",
   "license": "MIT",
   "workspaces": {
      "packages": [
         "apps/*",
         "packages/*"
      ]
   },
   "dependencies": {
      "concurrently": "^6.0.0"
   },
   "devDependencies": {
      "@types/node": "^14.14.37",
      "@typescript-eslint/eslint-plugin": "^4.20.0",
      "@typescript-eslint/parser": "^4.20.0",
      "create-react-app": "^4.0.3",
      "eslint": "^7.23.0",
      "eslint-config-prettier": "^8.1.0",
      "eslint-import-resolver-typescript": "^2.4.0",
      "eslint-import-resolver-webpack": "^0.13.0",
      "eslint-plugin-import": "^2.22.1",
      "eslint-plugin-prettier": "^3.3.1",
      "eslint-plugin-sort-destructure-keys": "^1.3.5",
      "fast-check": "^2.14.0",
      "nodemon": "^2.0.7",
      "npm-check-updates": "^11.3.0",
      "patch-package": "^6.4.7",
      "postinstall-postinstall": "^2.1.0",
      "prettier": "^2.2.1",
      "ts-node": "^9.1.1",
      "tsconfig-paths": "^3.9.0",
      "typescript": "^4.2.3",
      "husky": "4",
      "lint-staged": "^10.5.4"
   },
   "private": true,
   "engines": {
      "node": "^15"
   },
   "scripts": {
      "start": "concurrently -k -p \"[{name}]\" -n \"shartall\" -c \"cyan.bold,green.bold,blue.bold\" \"yarn start:api\" \"yarn start:frontend\"",
      "start:api": "cd apps/amole && yarn start:patch",
      "start:frontend": "cd apps/selleri && yarn start",
      "postinstall": "patch-package",
      "test-unit": "npm-run-all --parallel test-unit-common",
      "prettier:check": "prettier --check .",
      "check-sources": "yarn prettier:check && yarn --cwd backend check-sources",
      "typecheck:dev:frontend": "cd frontend && tsc --noEmit --preserveWatchOutput --watch",
      "format": "prettier --write .",
      "deps": "./install_packages.sh"
   }
}
